{
  "include": ["./src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es5",
    "rootDir": "./src",
    "baseUrl": "./",
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true
  }
}
